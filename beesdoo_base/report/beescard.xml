<odoo>
    <report id="report_beescard" string="Beescaard" model="res.partner"
        report_type="qweb-html" file="beesdoo_base.beescard_template"
        name="beesdoo_base.beescard_template" />
    <!-- Use paper format a4 low margin -->

    <template id="beescard_template">
        <t t-call="report.html_container">
            <!-- <t t-call="report.external_layout"> -->
            <div class="page">
                <t t-foreach="docs" t-as="partner">
                                <table
                                    style="border: 1px solid black;width: 386px;height: 243px;table-layout:fixed;display: inline-block;">
                                    <tr>
                                        <td style="width: 146px;vertical-align:top"  >
                                        <div style="padding-top:15px;padding-left:15px">
                                            <img alt="Embedded Image"
                                                t-att-src="'data:image/png;base64,' + partner.image"
                                                width="116px" height="150px" />
                                        </div>
                                        </td>
                                        <td style="vertical-align:top">
                                            <p style="text-align: left;padding-top: 15px;font-size: 14px;font-family:Roboto;"  >
                                                <span t-raw="partner.first_name[:30]" /><br />
                                                <span t-raw="partner.last_name[:24]" style="font-weight:bold" />
                                            </p>
                                             <div style="padding-top:22px">
                                             <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s'%('EAN13', partner.barcode if not partner.parent_eater_id else partner.parent_barcode, 200, 70, 1)"/> 
                                             </div>
                                     
                                             
                                             <div style="padding-top:5px">
                                             <img
                                                src="/beesdoo_base/static/src/img/redline.png"
                                                width="200px" height="6px" />
                                             </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="vertical-align:top">
                                            <p
                                                style="text-align:center;font-size:12px;font-family:Roboto">En cas de perte,
                                                pr√©vennez-nous via
                                                commande@bees-coop.be
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                                <table
                                    style="border: 1px solid black;width: 386px;height: 243px;table-layout:fixed;display: inline-block;">
                                    <tr>
                                        <td>

                                            <img
                                                src="/beesdoo_base/static/src/img/logo.png"
                                                style="display: block;margin-left: auto;margin-right: auto;margin-top:10px;margin-top:10px"
                                                width="190px" height="190px" />

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p style="text-align:center;font-family:Roboto">www.bees-coop.be
                                            </p>
                                        </td>
                                    </tr>
                                </table>

                    <!-- <table style="border: 1px solid black;width: 303px;height: 
                        191px"> <tr> <td> <img alt="Embedded Image" t-att-src="'data:image/png;base64,' 
                        + partner.image" /> <p t-field="partner.first_name"/><p t-field="partner.last_name" 
                        /> <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s'%('EAN13', 
                        partner.barcode, 300, 200, 1)"/> </td> </tr> </table> <table> <tr> <td> <img 
                        src="/beesdoo_base/static/src/img/logo.png" /> <div>www.bees-coop.be</div> 
                        </td> </tr> </table> -->
                        <br />
                </t>
            </div>
            <!-- </t> -->
        </t>
    </template>

</odoo>